<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CartActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        android:padding="1dp"
        android:layout_margin="1dp"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/button_net_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:background="#DC6B47"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_number"
                android:text="Number of Items :"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/text_view_number_of_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_view_number"
                android:padding="3dp"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_price"
                android:text="Price of Items :"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_below="@+id/text_view_number"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/text_view_price_of_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_number"
                android:layout_toRightOf="@+id/text_view_price"
                android:padding="3dp"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <Button
                android:id="@+id/button_pay_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_price"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"
                android:text="Pay Now" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>