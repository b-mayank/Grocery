<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dp"
        android:src="@drawable/grocery_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_title"
        android:text="Grocery_Title"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/image_view"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_unit"
        android:gravity="center"
        android:layout_toRightOf="@+id/image_view"
        android:layout_below="@+id/text_view_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit -"
            android:textSize="18dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_unit"
            android:text="Unit"
            android:textSize="18dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/black"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_mrp"
        android:text="Hello"
        android:layout_toRightOf="@+id/image_view"
        android:layout_below="@+id/linear_unit"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linear_layout"
        android:layout_toRightOf="@+id/image_view"
        android:layout_below="@+id/text_view_mrp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_price"
            android:text="Grocery_Price"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </LinearLayout>

</RelativeLayout>